@model IEnumerable<BOL.tbl_Url>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage URLs</h2>
@if (TempData["Msg"] != null)
{
    if (TempData["Msg"].ToString() == "Success!")
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>@TempData["Msg"].ToString()</strong>
        </div>
    }
    else
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>@TempData["Msg"].ToString()</strong>
        </div>
    }
}
@if (ViewBag.Status == "P")
{
    <b>@Html.ActionLink("Pending Urls", "Index", new { status = "P"})</b>
}
else
{
    @Html.ActionLink("Pending Urls", "Index", new { status = "P" })
}
|
@if (ViewBag.Status == "A")
{
    <b>@Html.ActionLink("Approved Urls", "Index", new { status = "A" })</b>
}
else
{
    @Html.ActionLink("Approved Urls", "Index", new { status = "A" })
}
|
@if (ViewBag.Status == "R")
{
    <b>@Html.ActionLink("Rejected Urls", "Index", new { status = "R" })</b>
}
else
{
    @Html.ActionLink("Rejected Urls", "Index", new { status = "R" })
}

<table class="table table-hover table-striped table-responsive">
    <tr class="warning">
        <th>
            @Html.CheckBox("SelectAll")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.c_UrlTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.c_Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.c_UrlDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.c_IsApproved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_Category.c_CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_User.c_UserEmail)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.CheckBox(item.i_UrlId.ToString(), false, new {@class = "ckb checkbox", Id = item.i_UrlId})
                @*@Html.ActionLink("Approve", "StatusUpdate", new { id = item.i_UrlId, status = "A" }, new { onclick = "return ConfirmApprove();" }) |
                @Html.ActionLink("Reject", "StatusUpdate", new { id = item.i_UrlId, status = "R" }, new { onclick = "return ConfirmReject();" })*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_UrlTitle)
            </td>
            <td>
                <a target="_blank" href="@item.c_Url">@item.c_Url</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_UrlDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_Category.c_CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_User.c_UserEmail)
            </td>
        </tr>
    }
</table>

<input type="button" id="Approve" value="Approve" class="btn btn-primary" /> |
<input type="button" id="Reject" value="Reject" class="btn btn-primary"/>

<!-- Modal Loading -->

<div id="loading" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
                <h4 class="modal-title">Loading</h4>
            </div>
            <div class="modal-body">
                <div class="progress progress-striped active">
                    <div class="progress-bar" style="width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            $(document).ajaxStart(function() {
                $('#loading').show();
            });

            $(document).ajaxStop(function () {
                $('#loading').hide();
            });


            $("#SelectAll").click(function(event) { // our main ckBox
                if (this.checked) { // check status if checked
                    $(".ckb").each(function() { // loop through all individuals checkbox
                        this.checked = true;
                    });
                } else {
                    $(".ckb").each(function() {
                        this.checked = false;
                    });
                }
            });

            $('#Approve').click(function() {
                // check all checkboxes and store it as an array
                checkedIds = $('.ckb').filter(":checked").map(function() { return this.id; });

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ApproveOrRejectAll", "ApproveUrl")',
                        traditional: true, // this is needed for MVC ajax calling process
                        data: { Ids: checkedIds.toArray(), Status: '@BOL.Url.StatusAuthorized.Value'},
                        success: successApp,
                        error: errorApp
                    });

            });

            function successApp(data, status) {
                location.reload(); // reload the page
            }

            function errorApp() {
                alert('error!');
            }


            $('#Reject').click(function () {
                // check all checkboxes and store it as an array
                checkedIds = $('.ckb').filter(":checked").map(function () { return this.id; });

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ApproveOrRejectAll", "ApproveUrl")',
                    traditional: true, // this is needed for MVC ajax calling process
                    data: { Ids: checkedIds.toArray(), Status: '@BOL.Url.StatusRejected.Value' },
                    success: successRej,
                    error: errorRej
                });

            });

            function successRej(data, status) {
                location.reload(); // reload the page
            }

            function errorRej() {
                alert('error!');
            }

        });



        function ConfirmApprove() {
            return confirm("Are u sure u want to approve?");
        }

        function ConfirmReject() {
            return confirm("Are u sure u want to Reject this url?");
        }
    </script>
}
